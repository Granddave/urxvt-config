! This file provide the configuration of X client applications,
! mostly needed for urxvt tweaking.
!
! Get the actual configuration with :
! xrdb -query -all
! Reload with :
! xrdb ~/.Xresources
! To reread your .Xresources file, and keep your old resources, type:
! xrdb -merge ~/.Xresources
! --------------------------------------------------------

! History {{{1
! size matters
*saveLines            : 32767

! Set termName {{{1
URxvt*termName        : screen-256color

! Xft {{{1
! anti-aliasing
Xft*antialias         : true
Xft.hinting           : true
Xft.hintstyle         : hintslight
Xft*dpi               : 96

! Xterm {{{1
XTerm*renderFont      : true
XTerm*faceSize        : 12
XTerm*faceName        : Inconsolata

! let’s be 8bit-clean {{{1
XTerm*utf8            : 1
XTerm*eightBitInput   : false
XTerm*eightBitControl : false
XTerm*eightBitOutput  : true

! disable fullscreen on <Alt-Return> {{{1
XTerm*fullscreen      : never
XTerm*omitTranslation : fullscreen

! URxvt über alles {{{1
URxvt*loginShell      : true
URxvt*scrollBar       : false
URxvt*scrollBar_right : false
URxvt*transparent     : true
URxvt*shading         : 30
URxvt*cursorBlink     : true

! Font configuration {{{1
! We need a positive letterspace, to display wide char.
URxvt*letterSpace     : 1
! URxvt.font            : xft:Ubuntu\ Mono\ derivative\ Powerline\ Plus\ Nerd\ File\ Types\ Mono\ Plus\ Font\ Awesome\ Plus\ Octicons\ Plus\ Pomicons:size=12,\
! URxvt.font            : xft:Droid\ Sans\ Mono\ for\ Powerline\ Plus\ Nerd\ File\ Types\ Plus\ Font\ Awesome\ Plus\ Octicons\ Plus\ Pomicons:size=12,\
! URxvt.font            : xft:ProggyCleanTT\ Plus\ Nerd\ File\ Types\ Plus\ Font\ Awesome\ Plus\ Octicons\ Plus\ Pomicons:size=12,\
! URxvt.font            : xft:Sauce Code Powerline Plus Nerd File Types Plus Pomicons:size=12,\
! URxvt.font            : xft:inconsolata\ for\ Powerline:size=12,\
! URxvt.font            : xft:Inconsolata\ for\ Powerline\ Plus\ Nerd\ File\ Types\ Mono\ Plus\ Font\ Awesome\ Plus\ Octicons\ Plus\ Pomicons:size=12,\
! URxvt.font: xft:ProggyCleanTT Plus Nerd File Types Mono:pixelsize=16:antialias=true:hinting=true,\
! URxvt.font: xft:Droid Sans Mono for Powerline Plus Nerd File Types Mono:pixelsize=16:antialias=true:hinting=true,\
! URxvt.font: xft:ProggyCleanTT Plus Nerd File Types Mono
! URxvt.font: xft:Inconsolata for Powerline PNFT:size=12
! URxvt.font:   xft:Sauce Code      Powerline Plus Nerd File Types Mono Plus Font Awesome Plus Octicons Plus Pomicons:size=12
! URxvt.font:   xft:Meslo LG L DZ for Powerline Plus Nerd File Types Mono Plus Font Awesome Plus Octicons Plus Pomicons:size=12
! URxvt.font:   xft:monofur for Powerline Plus Nerd File Types Plus Font Awesome Plus Octicons Plus Pomicons:size=12
! URxvt.font: xft:Unifont:size=12
URxvt.font: xft:Inconsolata for Powerline Plus Nerd File Types Mono Plus Font Awesome Plus Octicons Plus Pomicons:size=10,\
            xft:Unifont:size=12


! reclaim <Alt-s> and <Ctrl-Shift-*> shortcuts {{{1
URxvt*searchable-scrollback: M-S-s
URxvt*iso14755        : false
URxvt*iso14755_52     : false

! make Alt-arrow work {{{1
URxvt.keysym.M-Up     : \033[1;3A
URxvt.keysym.M-Down   : \033[1;3B
URxvt.keysym.M-Right  : \033[1;3C
URxvt.keysym.M-Left   : \033[1;3D
URxvt.keysym.M-Prior  : \033[5;3~
URxvt.keysym.M-Next   : \033[6;3~
URxvt.keysym.M-End    : \033[1;3F
URxvt.keysym.M-Home   : \033[1;3H

! make Ctrl-arrow work {{{1
URxvt.keysym.C-Up     : \033[1;5A
URxvt.keysym.C-Down   : \033[1;5B
URxvt.keysym.C-Right  : \033[1;5C
URxvt.keysym.C-Left   : \033[1;5D
URxvt.keysym.C-Prior  : \033[5;5~
URxvt.keysym.C-Next   : \033[6;5~
URxvt.keysym.C-End    : \033[1;5F
URxvt.keysym.C-Home   : \033[1;5H

! Keyboard remap {{{1
! From : http://www.netswarm.net/misc/urxvt-xtermcompat.txt
*URxvt*keysym.Home    : \033OH
*URxvt*keysym.End     : \033OF
*URxvt*keysym.F1      : \033OP
*URxvt*keysym.F2      : \033OQ
*URxvt*keysym.F3      : \033OR
*URxvt*keysym.F4      : \033OS

! extensions (+ disable the selection popup)
URxvt.perl-ext-common : default,matcher,clipboard,font-size,-selection-popup

! extensions -> matcher: open URL with a left click
URxvt.urlLauncher     : xdg-open
URxvt.matcher.button  : 1

! extensions -> clipboard (requires xsel)
! https://github.com/muennich/urxvt-perls
URxvt.keysym.C-C      : perl:clipboard:copy
URxvt.keysym.C-V      : perl:clipboard:paste
URxvt.keysym.C-M-v    : perl:clipboard:paste_escaped

! Clickable URLs {{{1
URxvt.url-launcher    : /usr/bin/firefox
URxvt.matcher.button  : 1
! Since rxvt-unicode 9.14, it is also possible to use matcher to open and list
! recent (currently limited to 10) URLs via keyboard:
URxvt.keysym.C-Delete : perl:matcher:last
URxvt.keysym.M-Delete : perl:matcher:list
! To color all matching text in a blue color for quickly finding links, use the
! following setting or any color in the form of #RRGGBB you like instead.
URxvt.colorUL         : #4682B4

! font-zoom {{{1
! Change font-size
! https://github.com/majutsushi/urxvt-font-size
! Add some keybindings:
URxvt.keysym.C-plus   : perl:font-size:increase
URxvt.keysym.C-minus  : perl:font-size:decrease
URxvt.keysym.C-A-plus : perl:font-size:incglobal
URxvt.keysym.C-A-minus: perl:font-size:decglobal
!step of font increasing
URxvt.font-size.step  : 1

